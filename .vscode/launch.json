{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Lloyds Digest — Run Now",
      "type": "python",
      "request": "launch",
      "module": "lloyds_digest",
      "args": ["run", "--now"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Lloyds Digest — Run Now (limit 50)",
      "type": "python",
      "request": "launch",
      "module": "lloyds_digest",
      "args": ["run", "--now", "--max-candidates", "50"],
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
